---
import { basics } from "@cv";
import Vengeance from "@/layouts/Vengeance.astro";
import { SEO } from "astro-seo";
import { Schema } from "astro-seo-schema"


interface Props {
	title: string;
}

const { title } = Astro.props;

const { image, summary, url, theme } = basics;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<title>{title}</title>
		<meta name="description" content={summary} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preload" as="image" href={image} />
		<link rel="sitemap" href="/sitemap-index.xml" />

		<meta property="og:url" content={url} />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={summary} />
		<meta property="og:image" content="" />

		<meta name="twitter:card" content="summary_large_image" />
		<meta property="twitter:domain" content={url.split("//")[1] ?? ""} />
		<meta property="twitter:url" content={url} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={summary} />
		<meta name="twitter:image" content="" />

		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Itim" />

		<link rel="stylesheet" href="/themes/themes.css" />
		
		<Schema
			item={{
			"@context": "https://schema.org",
			"@type": "Person",
			"name": "Neelanjan Chakraborty",
			"additionalName": "Neelanjan",
			"givenName": "Neelanjan",
			"familyName": "Chakraborty",
			"jobTitle": "Junior Full Stack Developer",
			"worksFor": {
				"@type": "Organization",
				"name": "HYSCALER"
			},
			"alumniOf": {
				"@type": "EducationalOrganization",
				"name": "CENTURION UNIVERSITY OF TECHNOLOGY AND MANAGEMENT"
			},
			"knowsAbout": [
				"Machine Learning",
				"Data Science",
				"Full Stack Development"
			],
			"url": "https://neelanjanchakraborty.in",
			"sameAs": [
				"https://www.linkedin.com/in/neelanjan-chakraborty",
				"https://github.com/neelanjanchakraborty",
				"https://twitter.com/neelanjanc"
			],
			"nationality": "Indian",
			"gender": "Male",
			"hasCredential": [
				{
				"@type": "EducationalOccupationalCredential",
				"credentialCategory": "Certificate",
				"educationalLevel": "Professional Certification",
				"name": "Hitachi Vantara Data Analyst Certification"
				},
				{
				"@type": "EducationalOccupationalCredential",
				"credentialCategory": "Certificate",
				"educationalLevel": "Professional Certification",
				"name": "Google Machine Learning Certificates"
				}
			]
			}
			}
		/>
		<SEO
  title="Neelanjan Chakraborty | Junior Full Stack Developer"
  description="Junior Full Stack Developer specializing in Machine Learning and Data Science. Passionate about building innovative solutions and advancing my skills."
  openGraph={{
  basic: {
    title: "Neelanjan Chakraborty - Junior Full Stack Developer",
    type: "profile",
    image: "https://neelanjanchakraborty.in/images/profile.jpg", // Replace with actual image URL
    url: "https://neelanjanchakraborty.in",
  },
  optional: {
    description: "Explore the profile of Neelanjan Chakraborty, a Junior Full Stack Developer with expertise in Machine Learning and Data Science. Discover innovative solutions and cutting-edge projects.",
    determiner: "a",
    locale: "en_US",
    siteName: "Neelanjan Chakraborty",
  }
  }}
  twitter={{
    creator: "@neelanjanchakraborty"
  }}
  extend={{
    // extending the default link tags
    link: [{ rel: "icon", href: "/favicon.ico" }],
    // extending the default meta tags
    meta: [
      {
        name: "twitter:image",
        content: "https://neelanjanchakraborty.in/thumnails/avatar.webp",
      },
      {
        name: "twitter:title",
        content: "Neelanjan Chakraborty | Junior Full Stack Developer",
      },
      {
        name: "twitter:description",
        content: "Specializing in Machine Learning and Data Science.",
      },
    ],
  }}
/>

		<Vengeance />
	</head>
	<body data-theme={theme} class="relative bg-skin-fill">
		<div class="absolute top-0 -z-10 h-full w-full print:hidden">
			<div class="bg-skin-hue/10 absolute bottom-auto left-[20%] right-auto top-0 h-[200px] w-[200px] -translate-x-[30%] translate-y-[20%] rounded-full blur-[80px] invert-0 dark:bg-white/5"></div>
		</div>
		  <div class="animated-background">
			<!-- Floating shapes will be created here by CSS -->
		</div>
		<slot />
		<style is:global>
			body,
			figure {
				margin: 0;
				padding: 0;
			}

			a {
				text-decoration: none;
			}

			ul {
				list-style: none;
				margin: 0;
				padding: 0;
			}

			*,
			*::before,
			*::after {
				box-sizing: border-box;
			}

			h1,
			h2,
			h3,
			h4 {
				@apply text-skin-base;
				margin: 0;
				font-family:
					system-ui,
					-apple-system,
					BlinkMacSystemFont,
					"Segoe UI",
					Roboto,
					Oxygen,
					Ubuntu,
					Cantarell,
					"Open Sans",
					"Helvetica Neue",
					sans-serif;
			}

			p {
				@apply text-sm text-skin-muted;
				line-height: 1.5;
				text-wrap: pretty;
			}

			.print {
				display: none !important;
			}

			.dev * {
				@apply border border-red-500/50 bg-red-500/5;
			}
			#hotkeypad [data-backdrop] {
				@apply !bg-zinc-800 !opacity-80;
			}

			@media print {
				.no-print {
					display: none !important;
				}

				.print {
					display: block !important;
				}

				astro-dev-toolbar {
					display: none !important;
				}

				article {
					break-inside: avoid;
				}
			}
  .animated-background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      overflow: hidden;
      pointer-events: none; /* Prevent interaction with the background shapes */
    }

    .animated-background::before,
    .animated-background::after,
    .animated-background .shape1,
    .animated-background .shape2,
    .animated-background .shape3 {
      content: '';
      position: absolute;
      border-radius: 50%;
      background: radial-gradient(circle, rgba(0, 0, 255, 0.6), rgba(0, 100, 255, 0.3));
      animation: float 15s ease-in-out infinite;
    }

    .animated-background::before {
      width: 200px;
      height: 200px;
      top: 10%;
      left: 20%;
      filter: blur(30px);
      animation: hueRotate 30s linear infinite, float 15s ease-in-out infinite;
    }

    .animated-background::after {
      width: 150px;
      height: 150px;
      top: 60%;
      left: 70%;
      filter: blur(30px);
      animation: hueRotate 30s linear infinite, float 15s ease-in-out infinite;
    }

    .animated-background .shape1 {
      width: 180px;
      height: 180px;
      top: 30%;
      left: 40%;
      filter: blur(30px);
      animation: hueRotate 30s linear infinite, float 15s ease-in-out infinite;
    }

    .animated-background .shape2 {
      width: 120px;
      height: 120px;
      top: 50%;
      left: 20%;
      filter: blur(30px);
      animation: hueRotate 30s linear infinite, float 15s ease-in-out infinite;
    }

    .animated-background .shape3 {
      width: 250px;
      height: 250px;
      top: 70%;
      left: 80%;
      filter: blur(30px);
      animation: hueRotate 30s linear infinite, float 15s ease-in-out infinite;
    }

    @keyframes float {
      0% {
        transform: translateY(0) rotate(0deg);
      }
      50% {
        transform: translateY(-20px) rotate(180deg);
      }
      100% {
        transform: translateY(0) rotate(360deg);
      }
    }

    @keyframes hueRotate {
      0% {
        background: radial-gradient(circle, rgba(0, 0, 255, 0.6), rgba(0, 100, 255, 0.3));
      }
      50% {
        background: radial-gradient(circle, rgba(0, 100, 255, 0.6), rgba(0, 0, 255, 0.3));
      }
      100% {
        background: radial-gradient(circle, rgba(0, 0, 255, 0.6), rgba(0, 100, 255, 0.3));
      }
    }
		</style>
	</body>
</html>
